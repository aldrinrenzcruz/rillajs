{
  "name": "rillajs",
  "version": "1.0.0",
  "description": "This project is a lightweight Vanilla JavaScript utility that provides shorthand functions for common DOM operations. It simplifies element selection, event handling, and other interactions without relying on external libraries like jQuery.",
  "main": "main.js",
  "scripts": {
    "merge": "node build/merge.js && npm run minify",
    "minify": "terser dist/rilla.js -o dist/rilla.min.js && npm run tailwind",
    "tailwind": "npx @tailwindcss/cli -i ./src/css/main.css -o ./public/assets/css/app.css --minify",
    "tailwind:watch": "npx @tailwindcss/cli -i ./src/css/main.css -o ./public/assets/css/app.css --watch",
    "push": "npm run merge && netlify deploy --prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aldrinrenzcruz/rillajs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aldrinrenzcruz/rillajs/issues"
  },
  "homepage": "https://github.com/aldrinrenzcruz/rillajs#readme",
  "dependencies": {
    "@tailwindcss/cli": "^4.0.17",
    "fs-extra": "^11.3.0",
    "tailwindcss": "^4.0.17"
  },
  "devDependencies": {
    "terser": "^5.39.0"
  }
}